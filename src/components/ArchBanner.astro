<style>
    .arch-banner {
        display: flex;
        align-items: stretch;
        margin-bottom: 2.5rem;
        background: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        box-shadow: var(--shadow-banner);
        text-decoration: none;
        color: var(--arch-ink);
        transition: all 0.12s ease;
        position: relative;
        overflow: hidden;
    }

    .arch-banner:hover {
        transform: translate(4px, 4px);
        box-shadow: var(--shadow-banner-hover);
    }

    .arch-banner-stripe {
        width: 8px;
        background: var(--arch-brick);
        flex-shrink: 0;
    }

    .arch-banner-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 72px;
        flex-shrink: 0;
        background: var(--arch-paper);
        border-right: 2px solid var(--arch-ink);
        font-size: 1.75rem;
    }

    .arch-banner-body {
        flex: 1;
        padding: 1.15rem 1.5rem;
    }

    .arch-banner-label {
        font-family: var(--font-heading);
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        color: var(--arch-brick);
        margin-bottom: 0.25rem;
        display: block;
    }

    .arch-banner-title {
        font-family: var(--font-heading);
        font-size: 1.15rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: -0.01em;
        margin-bottom: 0.3rem;
    }

    .arch-banner-desc {
        font-size: 0.82rem;
        color: var(--arch-ink-light);
        line-height: 1.5;
        font-weight: 400;
    }

    .arch-banner-stats {
        display: flex;
        gap: 0.75rem;
        margin-top: 0.65rem;
    }

    .arch-stat {
        font-family: var(--font-mono);
        font-size: 0.68rem;
        color: var(--arch-ink-light);
        background: var(--arch-paper);
        border: 1px solid var(--arch-line);
        padding: 0.2rem 0.55rem;
    }

    .arch-stat strong {
        color: var(--arch-ink);
        font-weight: 500;
    }

    .arch-banner-corner {
        position: absolute;
        top: 0;
        right: 56px;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 28px 28px 0;
        border-color: transparent var(--arch-brick-transparent) transparent transparent;
    }

    .arch-banner-arrow {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        flex-shrink: 0;
        border-left: 2px solid var(--arch-ink);
        background: var(--arch-paper);
        font-size: 1.5rem;
        color: var(--arch-ink-light);
        transition: all 0.12s;
    }

    .arch-banner:hover .arch-banner-arrow {
        background: var(--arch-brick);
        color: var(--arch-surface);
    }

    @media (max-width: 768px) {
        .arch-banner {
            flex-direction: column;
        }

        .arch-banner-stripe {
            width: 100%;
            height: 6px;
        }

        .arch-banner-icon {
            width: 100%;
            height: 48px;
            border-right: none;
            border-bottom: 2px solid var(--arch-ink);
        }

        .arch-banner-arrow {
            width: 100%;
            height: 44px;
            border-left: none;
            border-top: 2px solid var(--arch-ink);
        }

        .arch-banner-corner {
            display: none;
        }
    }
</style>

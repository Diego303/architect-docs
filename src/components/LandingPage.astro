---
import Button from './ui/Button.astro';
import ElevatorPitch from './sections/ElevatorPitch.astro';
import KillerFeatures from './sections/KillerFeatures.astro';
import Comparison from './sections/Comparison.astro';
import UseCases from './sections/UseCases.astro';
import QuickStart from './sections/QuickStart.astro';
import { t, getLocalizedPath, type Lang } from '../i18n/utils';

interface Props {
    lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<main class="landing-main">
    <div class="bg-shape"></div>

    <div class="hero-section">
        <h1 class="hero-title">
            {t('hero.titleLine1', lang)} <br />
            <span class="highlight-brick">{t('hero.titleHighlight', lang)}</span>
        </h1>

        <p class="hero-subtitle" set:html={t('hero.subtitle', lang)} />

        <!-- Code Block — Real Human Logs -->
        <div class="code-figure">
            <div class="code-figure-header">
                <span class="code-figure-title">{t('hero.terminalHeader', lang)}</span>
                <div class="code-figure-dot"></div>
            </div>
            <div class="code-figure-content">
                <div><span class="prompt font-bold">$ </span><span class="font-bold">architect run "{lang === 'es' ? 'Refactoriza el módulo auth del proyecto' : 'Refactor the project auth module'}"</span></div>
                <div class="log-spacer"></div>
                <div class="log-step"><span class="log-icon">&#x1F504;</span> {t('hero.terminalStep1', lang)}</div>
                <div class="log-detail"><span class="log-check">&#x2713;</span> {t('hero.terminalStep1Detail', lang)}</div>
                <div class="log-spacer-sm"></div>
                <div class="log-tool"><span class="log-icon">&#x1F527;</span> {t('hero.terminalTool1', lang)}</div>
                <div class="log-result"><span class="log-check">&#x2713;</span> OK</div>
                <div class="log-spacer-sm"></div>
                <div class="log-tool"><span class="log-icon">&#x1F527;</span> {t('hero.terminalTool2', lang)}</div>
                <div class="log-result"><span class="log-check">&#x2713;</span> OK</div>
                <div class="log-result"><span class="log-icon-sm">&#x1F50D;</span> {t('hero.terminalHook', lang)} <span class="log-check">&#x2713;</span></div>
                <div class="log-spacer"></div>
                <div class="log-step"><span class="log-icon">&#x1F504;</span> {t('hero.terminalStep2', lang)}</div>
                <div class="log-detail"><span class="log-check">&#x2713;</span> {t('hero.terminalStep2Detail', lang)}</div>
                <div class="log-spacer"></div>
                <div class="log-done"><span class="log-icon">&#x2705;</span> {t('hero.terminalDone', lang)}</div>
                <div class="log-meta">{t('hero.terminalReason', lang)}</div>
                <div class="log-meta">{t('hero.terminalCost', lang)} <span class="text-arch-brick">$0.0042</span> <span class="cursor"></span></div>
            </div>
        </div>

        <div class="cta-group">
            <Button href={getLocalizedPath('docs/', lang)}>{t('hero.btnDocs', lang)}</Button>
            <Button variant="secondary" href="https://github.com/Diego303/architect-cli" target="_blank">{t('hero.btnGithub', lang)}</Button>
        </div>
    </div>

    <!-- Marketing sections -->
    <ElevatorPitch lang={lang} />
    <KillerFeatures lang={lang} />
    <Comparison lang={lang} />
    <UseCases lang={lang} />
    <QuickStart lang={lang} />

</main>

<style>
    .landing-main {
        position: relative;
        padding-bottom: 5rem;
        overflow-x: hidden;
    }

    .bg-shape {
        position: absolute;
        top: -100px;
        right: -5%;
        width: 800px;
        height: 800px;
        background-color: var(--arch-shape);
        border: 1px solid var(--arch-line);
        border-radius: 50% 50% 0 0;
        z-index: -1;
        opacity: 0.6;
        pointer-events: none;
    }

    .hero-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 5rem 1.5rem;
        max-width: 80rem;
        margin: 0 auto;
    }

    .hero-title {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 3rem;
        line-height: 1.1;
        color: var(--arch-ink);
        margin-bottom: 1.5rem;
    }

    @media (min-width: 768px) {
        .hero-title {
            font-size: 4.5rem;
        }
    }

    .highlight-brick {
        position: relative;
        display: inline-block;
        color: var(--arch-brick);
    }

    .highlight-brick::after {
        content: '';
        position: absolute;
        bottom: 8px;
        left: 0;
        width: 100%;
        height: 12px;
        background-color: var(--arch-brick-transparent);
        z-index: -1;
        transform: skewX(-15deg);
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: var(--arch-ink-light);
        max-width: 42rem;
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .hero-subtitle {
            font-size: 1.25rem;
        }
    }

    .text-ink { color: var(--arch-ink); }

    /* Code Figure */
    .code-figure {
        width: 100%;
        max-width: 48rem;
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        box-shadow: var(--shadow-draft);
        text-align: left;
        margin-bottom: 4rem;
        overflow: hidden;
    }

    .code-figure-header {
        background-color: var(--arch-paper);
        border-bottom: 2px solid var(--arch-ink);
        padding: 0.75rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .code-figure-title {
        font-family: var(--font-mono);
        color: var(--arch-ink);
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    .code-figure-dot {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background-color: var(--arch-ink);
        opacity: 0.2;
    }

    .code-figure-content {
        padding: 1.5rem;
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--arch-ink);
        line-height: 1.7;
        overflow-x: auto;
    }

    .prompt { color: var(--arch-ink-light); user-select: none; }
    .cursor { display: inline-block; width: 0.5rem; height: 1rem; background-color: var(--arch-brick); vertical-align: middle; animation: blink 1s infinite; margin-left: 0.25rem; }

    @keyframes blink { 50% { opacity: 0; } }

    /* Human Log Styles */
    .log-spacer { height: 0.75rem; }
    .log-spacer-sm { height: 0.25rem; }

    .log-step {
        color: var(--arch-ink);
        font-weight: 600;
    }

    .log-detail {
        padding-left: 1.5rem;
        color: var(--arch-ink-light);
    }

    .log-tool {
        padding-left: 1.5rem;
        color: var(--arch-ink);
    }

    .log-result {
        padding-left: 3rem;
        color: var(--arch-ink-light);
    }

    .log-done {
        color: var(--arch-ink);
        font-weight: 700;
    }

    .log-meta {
        padding-left: 1.5rem;
        color: var(--arch-ink-light);
        font-size: 0.8125rem;
    }

    .log-icon {
        margin-right: 0.375rem;
    }

    .log-icon-sm {
        margin-right: 0.25rem;
        font-size: 0.75rem;
    }

    .log-check {
        color: var(--arch-ink);
        font-weight: 700;
        margin-right: 0.25rem;
    }

    /* CTA */
    .cta-group {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100%;
        max-width: 30rem;
    }

    @media (min-width: 640px) {
        .cta-group {
            flex-direction: row;
            justify-content: center;
        }
    }

    .font-bold { font-weight: 700; }
</style>

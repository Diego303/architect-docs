---
import { LATEST_VERSION } from '../config/versions';
---
<nav class="navbar">
    <div class="container navbar-content">
        <div class="logo-section">
            <a href={import.meta.env.BASE_URL} class="logo">
                <!-- Logo Abstracto (Un solo triangulo hueco) -->
                <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2.5" d="M12 3L3 21h18L12 3z"></path>
                </svg>
                <span class="logo-text">Architect</span>
            </a>
            <span class="version-tag">{LATEST_VERSION.label}</span>
        </div>

        <div class="nav-links">
            <a href={`${import.meta.env.BASE_URL}docs/`} class="nav-link">Docs</a>
            <a href={`${import.meta.env.BASE_URL}casos-de-uso/`} class="nav-link">Casos de Uso</a>
            <a href={`${import.meta.env.BASE_URL}roadmap/`} class="nav-link">Roadmap</a>
            <a href="https://github.com" target="_blank" class="nav-link icon-link">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
            </a>
        </div>
    </div>
</nav>

<style>
    .navbar {
        border-bottom: 2px solid var(--arch-ink);
        background-color: rgba(253, 251, 247, 0.9); /* arch-paper with opacity */
        backdrop-filter: blur(12px);
        position: sticky;
        top: 0;
        z-index: 50;
        padding: 1rem 0;
    }

    .navbar-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
    }

    .logo-icon {
        width: 2rem;
        height: 2rem;
        color: var(--arch-brick);
    }

    .logo-text {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 1.5rem;
        color: var(--arch-ink);
        text-transform: uppercase;
        letter-spacing: -0.02em;
        text-decoration: none;
    }

    .version-tag {
        background-color: var(--arch-ink);
        color: var(--arch-paper);
        font-family: var(--font-mono);
        font-size: 0.75rem;
        padding: 0.125rem 0.5rem;
        border-radius: 2px;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-link {
        font-family: var(--font-heading);
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--arch-ink-light);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .nav-link:hover {
        color: var(--arch-brick);
    }
    
    .icon-link svg {
        display: block;
    }
    
    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
    }
</style>

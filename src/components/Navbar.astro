---
import { LATEST_VERSION } from '../config/versions';
import { t, getLocalizedPath, type Lang } from '../i18n/utils';
import LangToggle from './LangToggle.astro';

interface Props {
    lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const base = import.meta.env.BASE_URL;
const home = lang === 'en' ? `${base}en/` : base;
---
<nav class="navbar">
    <div class="container navbar-content">
        <div class="logo-section">
            <a href={home} class="logo">
                <!-- Logo Abstracto (Un solo triangulo hueco) -->
                <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2.5" d="M12 3L3 21h18L12 3z"></path>
                </svg>
                <span class="logo-text">Architect</span>
            </a>
            <span class="version-tag">{LATEST_VERSION.label}</span>
        </div>

        <button class="nav-toggle" aria-label={t('nav.aria', lang)} aria-expanded="false">
            <svg class="hamburger-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg class="close-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <div class="nav-links">
            <a href={getLocalizedPath(t('nav.whyHref', lang), lang)} class="nav-link">{t('nav.why', lang)}</a>
            <a href={getLocalizedPath('docs/', lang)} class="nav-link">{t('nav.docs', lang)}</a>
            <a href={getLocalizedPath(t('nav.useCasesHref', lang), lang)} class="nav-link">{t('nav.useCases', lang)}</a>
            <a href={getLocalizedPath('roadmap/', lang)} class="nav-link">{t('nav.roadmap', lang)}</a>
            <a href="https://github.com/Diego303/architect-cli" target="_blank" class="nav-link icon-link">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
            </a>
            <LangToggle lang={lang} />
        </div>
    </div>
</nav>

<script>
    const toggle = document.querySelector('.nav-toggle');
    const links = document.querySelector('.nav-links');

    toggle?.addEventListener('click', () => {
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', String(!expanded));
        links?.classList.toggle('nav-open');
    });
</script>

<style>
    .navbar {
        border-bottom: 2px solid var(--arch-ink);
        background-color: rgba(253, 251, 247, 0.9); /* arch-paper with opacity */
        backdrop-filter: blur(12px);
        position: sticky;
        top: 0;
        z-index: 50;
        padding: 1rem 0;
    }

    .navbar-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
    }

    .logo-icon {
        width: 2rem;
        height: 2rem;
        color: var(--arch-brick);
    }

    .logo-text {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 1.5rem;
        color: var(--arch-ink);
        text-transform: uppercase;
        letter-spacing: -0.02em;
        text-decoration: none;
    }

    .version-tag {
        background-color: var(--arch-ink);
        color: var(--arch-paper);
        font-family: var(--font-mono);
        font-size: 0.75rem;
        padding: 0.125rem 0.5rem;
        border-radius: 2px;
    }

    /* Hamburger toggle â€” mobile only */
    .nav-toggle {
        display: none;
        background: none;
        border: 2px solid var(--arch-ink);
        padding: 0.375rem;
        cursor: pointer;
        color: var(--arch-ink);
        line-height: 0;
    }

    .nav-toggle svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    .nav-toggle .close-icon {
        display: none;
    }

    .nav-toggle[aria-expanded="true"] .hamburger-icon {
        display: none;
    }

    .nav-toggle[aria-expanded="true"] .close-icon {
        display: block;
    }

    /* Desktop nav links */
    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-link {
        font-family: var(--font-heading);
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--arch-ink-light);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .nav-link:hover {
        color: var(--arch-brick);
    }

    .icon-link svg {
        display: block;
    }

    /* Mobile */
    @media (max-width: 768px) {
        .nav-toggle {
            display: block;
        }

        .nav-links {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            flex-direction: column;
            align-items: stretch;
            gap: 0;
            background-color: var(--arch-paper);
            border-bottom: 2px solid var(--arch-ink);
            z-index: 50;
        }

        .nav-links.nav-open {
            display: flex;
        }

        .nav-link {
            display: block;
            padding: 1rem 1.5rem;
            border-top: 1px solid var(--arch-line);
            font-size: 0.9375rem;
        }

        .nav-link:first-child {
            border-top: none;
        }

        .nav-link:hover {
            background-color: var(--arch-shape);
        }

        .icon-link {
            padding: 1rem 1.5rem;
        }

        .icon-link svg {
            width: 1.25rem;
            height: 1.25rem;
        }
    }
</style>

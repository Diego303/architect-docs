---
import { VERSIONS, type VersionConfig } from '../config/versions';

interface Props {
  versions?: VersionConfig[];
}

const { versions = VERSIONS } = Astro.props;
---

<div class="version-selector">
  <label class="version-label" for="version-select">VERSION</label>
  <div class="version-select-box">
    <select id="version-select" class="version-select">
      {versions.map(v => (
        <option value={v.id} selected={v.isLatest}>
          {v.label}{v.isLatest ? ' (latest)' : ''}
        </option>
      ))}
    </select>
    <svg class="select-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2.5" d="M19 9l-7 7-7-7" />
    </svg>
  </div>
</div>

<style>
  .version-selector {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .version-label {
    font-family: var(--font-heading);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--arch-ink-light);
    white-space: nowrap;
  }

  .version-select-box {
    position: relative;
    display: inline-flex;
    align-items: center;
  }

  .version-select {
    appearance: none;
    -webkit-appearance: none;
    background-color: var(--arch-surface);
    border: 2px solid var(--arch-ink);
    box-shadow: var(--shadow-draft);
    padding: 0.5rem 2.25rem 0.5rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--arch-ink);
    cursor: pointer;
    outline: none;
    transition: transform 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                box-shadow 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .version-select:hover,
  .version-select:focus {
    transform: translate(2px, 2px);
    box-shadow: var(--shadow-draft-hover);
  }

  .select-chevron {
    position: absolute;
    right: 0.5rem;
    width: 1rem;
    height: 1rem;
    pointer-events: none;
    color: var(--arch-ink);
  }
</style>

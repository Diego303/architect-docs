---
import { t, tArray, type Lang } from '../../i18n/utils';

interface Props {
    lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const badges = tArray('elevator.badges', lang);
---

<section id="about" class="elevator-section">
    <div class="elevator-container">
        <div class="section-header">
            <h2 class="section-title">{t('elevator.title', lang)}</h2>
            <div class="section-line"></div>
        </div>

        <div class="elevator-grid">
            <div class="elevator-text">
                <p class="elevator-lead" set:html={t('elevator.lead', lang)} />
                <p class="elevator-body" set:html={t('elevator.body1', lang)} />
                <p class="elevator-body">{t('elevator.body2', lang)}</p>
            </div>

            <div class="elevator-values">
                <div class="value-item">
                    <div class="value-marker"></div>
                    <div>
                        <h4 class="value-title">{t('elevator.value1Title', lang)}</h4>
                        <p class="value-desc">{t('elevator.value1Desc', lang)}</p>
                    </div>
                </div>
                <div class="value-item">
                    <div class="value-marker"></div>
                    <div>
                        <h4 class="value-title">{t('elevator.value2Title', lang)}</h4>
                        <p class="value-desc">{t('elevator.value2Desc', lang)}</p>
                    </div>
                </div>
                <div class="value-item">
                    <div class="value-marker"></div>
                    <div>
                        <h4 class="value-title">{t('elevator.value3Title', lang)}</h4>
                        <p class="value-desc">{t('elevator.value3Desc', lang)}</p>
                    </div>
                </div>
                <div class="value-item">
                    <div class="value-marker"></div>
                    <div>
                        <h4 class="value-title">{t('elevator.value4Title', lang)}</h4>
                        <p class="value-desc">{t('elevator.value4Desc', lang)}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="badge-strip">
            {badges.map(badge => (
                <span class="badge">{badge}</span>
            ))}
        </div>
    </div>
</section>

<style>
    .elevator-section {
        max-width: 80rem;
        margin: 0 auto;
        padding: 4rem 1.5rem 5rem;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 1.875rem;
        color: var(--arch-ink);
        font-weight: 800;
        margin: 0;
        white-space: nowrap;
    }

    @media (max-width: 640px) {
        .section-title {
            white-space: normal;
            font-size: 1.5rem;
        }
    }

    .section-line {
        height: 4px;
        background-color: var(--arch-ink);
        flex-grow: 1;
    }

    .elevator-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    @media (min-width: 1024px) {
        .elevator-grid {
            grid-template-columns: 1.2fr 1fr;
            gap: 4rem;
        }
    }

    .elevator-lead {
        font-size: 1.125rem;
        line-height: 1.7;
        color: var(--arch-ink);
        margin: 0 0 1.5rem 0;
        font-weight: 400;
    }

    .elevator-lead strong {
        color: var(--arch-brick);
        font-weight: 600;
    }

    .elevator-body {
        font-size: 1rem;
        line-height: 1.7;
        color: var(--arch-ink-light);
        margin: 0 0 1rem 0;
    }

    .elevator-body em {
        color: var(--arch-ink);
        font-style: normal;
        font-weight: 500;
    }

    .elevator-values {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .value-item {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
        padding: 1.25rem;
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
    }

    .value-marker {
        width: 0.75rem;
        height: 0.75rem;
        min-width: 0.75rem;
        background-color: var(--arch-brick);
        margin-top: 0.25rem;
    }

    .value-title {
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--arch-ink);
        margin: 0 0 0.375rem 0;
    }

    .value-desc {
        font-size: 0.875rem;
        line-height: 1.5;
        color: var(--arch-ink-light);
        margin: 0;
    }

    .badge-strip {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        justify-content: center;
        padding-top: 1rem;
    }

    .badge {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--arch-ink);
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        padding: 0.375rem 0.875rem;
        letter-spacing: 0.02em;
        text-transform: uppercase;
    }
</style>

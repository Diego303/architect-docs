---
import Button from '../ui/Button.astro';
import CodeFigure from '../ui/CodeFigure.astro';
import { t, getLocalizedPath, type Lang } from '../../i18n/utils';

interface Props {
    lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<section id="quickstart" class="quickstart-section">
    <div class="quickstart-container">
        <div class="section-header">
            <h2 class="section-title">{t('quickstart.title', lang)}</h2>
            <div class="section-line"></div>
        </div>

        <div class="quickstart-grid">
            <div class="quickstart-steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4 class="step-title">{t('quickstart.step1Title', lang)}</h4>
                        <span class="step-note">{t('quickstart.step1Note', lang)}</span>
                        <code class="step-cmd">pip install architect-ai-cli</code>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4 class="step-title">{t('quickstart.step2Title', lang)}</h4>
                        <code class="step-cmd">architect init --preset python</code>
                        <span class="step-note">{t('quickstart.step2Note', lang)}</span>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4 class="step-title">{t('quickstart.step3Title', lang)}</h4>
                        <code class="step-cmd">architect run "Añade un endpoint GET /health que devuelva {'{'}status: ok{'}'}"</code>
                    </div>
                </div>
            </div>

            <CodeFigure title={t('quickstart.figureTitle', lang)}>
                <div class="example-line"><span class="ex-comment">{t('quickstart.comment1', lang)}</span></div>
                <div class="example-line"><span class="ex-prompt">$ </span>architect run "Refactoriza el módulo auth" --dry-run</div>
                <div class="example-spacer"></div>
                <div class="example-line"><span class="ex-comment">{t('quickstart.comment2', lang)}</span></div>
                <div class="example-line"><span class="ex-prompt">$ </span>architect loop "Corrige todos los errores de lint" \</div>
                <div class="example-line">  --check "ruff check src/" --max-iterations 10</div>
                <div class="example-spacer"></div>
                <div class="example-line"><span class="ex-comment">{t('quickstart.comment3', lang)}</span></div>
                <div class="example-line"><span class="ex-prompt">$ </span>architect parallel "Optimiza las queries SQL" \</div>
                <div class="example-line">  --models gpt-4.1,claude-sonnet-4,deepseek-chat</div>
                <div class="example-spacer"></div>
                <div class="example-line"><span class="ex-comment">{t('quickstart.comment4', lang)}</span></div>
                <div class="example-line"><span class="ex-prompt">$ </span>architect run "Revisa este PR" --agent review \</div>
                <div class="example-line">  --budget 0.15 --report github</div>
                <div class="example-spacer"></div>
                <div class="example-line"><span class="ex-comment">{t('quickstart.comment5', lang)}</span></div>
                <div class="example-line"><span class="ex-result">{t('quickstart.exitCodes', lang)}</span></div>
            </CodeFigure>
        </div>

        <div class="cta-final">
            <p class="cta-text">
                {t('quickstart.ctaText', lang)}
            </p>
            <div class="cta-buttons">
                <Button href={getLocalizedPath(t('quickstart.ctaHref', lang), lang)}>{t('quickstart.ctaButton', lang)}</Button>
            </div>
        </div>
    </div>
</section>

<style>
    .quickstart-section {
        max-width: 80rem;
        margin: 0 auto;
        padding: 5rem 1.5rem 6rem;
        border-top: 2px solid var(--arch-line);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 1.875rem;
        color: var(--arch-ink);
        font-weight: 800;
        margin: 0;
        white-space: nowrap;
    }

    @media (max-width: 640px) {
        .section-title {
            white-space: normal;
            font-size: 1.5rem;
        }
    }

    .section-line {
        height: 4px;
        background-color: var(--arch-ink);
        flex-grow: 1;
    }

    .quickstart-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2.5rem;
        margin-bottom: 4rem;
    }

    @media (min-width: 1024px) {
        .quickstart-grid {
            grid-template-columns: 1fr 1fr;
            align-items: start;
        }
    }

    .quickstart-steps {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .step {
        display: flex;
        gap: 1.25rem;
        align-items: flex-start;
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        padding: 1.5rem;
    }

    .step-number {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 1.5rem;
        color: var(--arch-brick);
        width: 2.5rem;
        height: 2.5rem;
        min-width: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid var(--arch-ink);
        background-color: var(--arch-paper);
    }

    .step-content {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
    }

    .step-title {
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--arch-ink);
        margin: 0;
    }

    .step-cmd {
        font-family: var(--font-mono);
        font-size: 0.8125rem;
        color: var(--arch-ink);
        background-color: var(--arch-shape);
        padding: 0.375rem 0.75rem;
        border: 1px solid var(--arch-line);
        word-break: break-all;
    }

    .step-note {
        font-size: 0.75rem;
        color: var(--arch-ink-light);
        font-style: italic;
    }

    /* Examples inside CodeFigure */
    .example-line {
        padding: 0.0625rem 0;
    }

    .ex-comment {
        color: var(--arch-ink-light);
        font-style: italic;
    }

    .ex-prompt {
        color: var(--arch-ink-light);
        user-select: none;
    }

    .ex-result {
        color: var(--arch-brick);
    }

    .example-spacer {
        height: 0.75rem;
    }

    /* Final CTA */
    .cta-final {
        text-align: center;
        padding: 3rem 2rem;
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        box-shadow: var(--shadow-draft);
    }

    .cta-text {
        font-size: 1.125rem;
        color: var(--arch-ink-light);
        margin: 0 0 2rem 0;
        line-height: 1.6;
    }

    .cta-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 640px) {
        .cta-buttons {
            flex-direction: row;
        }
    }
</style>

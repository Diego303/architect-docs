---
import CodeFigure from '../ui/CodeFigure.astro';
import { ui } from '../../i18n/ui';
import { t, type Lang } from '../../i18n/utils';

interface Props {
    lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const devCases = ui[lang].useCases.devCases;
const teamCases = ui[lang].useCases.teamCases;
const ciCases = ui[lang].useCases.ciCases;
---

<section id="use-cases" class="usecases-section">
    <div class="usecases-container">
        <div class="section-header">
            <h2 class="section-title">{t('useCases.title', lang)}</h2>
            <div class="section-line"></div>
        </div>

        <div class="usecases-grid">
            <!-- For Developers -->
            <div class="usecase-block">
                <div class="usecase-label">
                    <div class="usecase-marker"></div>
                    <h3 class="usecase-title">{t('useCases.devTitle', lang)}</h3>
                </div>
                <p class="usecase-desc">{t('useCases.devDesc', lang)}</p>
                <div class="usecase-commands">
                    {devCases.map(c => (
                        <div class="cmd-item">
                            <span class="cmd-label">{c.label}</span>
                            <code class="cmd-code">$ {c.cmd}</code>
                        </div>
                    ))}
                </div>
            </div>

            <!-- For Teams -->
            <div class="usecase-block">
                <div class="usecase-label">
                    <div class="usecase-marker"></div>
                    <h3 class="usecase-title">{t('useCases.teamTitle', lang)}</h3>
                </div>
                <p class="usecase-desc">{t('useCases.teamDesc', lang)}</p>
                <div class="usecase-commands">
                    {teamCases.map(c => (
                        <div class="cmd-item">
                            <span class="cmd-label">{c.label}</span>
                            <code class="cmd-code">$ {c.cmd}</code>
                        </div>
                    ))}
                </div>

                <CodeFigure title={t('useCases.teamFigureTitle', lang)} class="usecase-code">
                    <div><span class="yaml-key">- name:</span> AI Code Review</div>
                    <div class="yaml-indent"><span class="yaml-key">run:</span> |</div>
                    <div class="yaml-indent2">architect run "{t('useCases.teamGhActionCmd', lang)}" \</div>
                    <div class="yaml-indent2">  --agent review \</div>
                    <div class="yaml-indent2">  --context-git-diff origin/main \</div>
                    <div class="yaml-indent2">  --report github \</div>
                    <div class="yaml-indent2">  --budget 0.10</div>
                </CodeFigure>
            </div>

            <!-- For CI/CD & DevOps -->
            <div class="usecase-block">
                <div class="usecase-label">
                    <div class="usecase-marker"></div>
                    <h3 class="usecase-title">{t('useCases.ciTitle', lang)}</h3>
                </div>
                <p class="usecase-desc">{t('useCases.ciDesc', lang)}</p>
                <div class="usecase-commands">
                    {ciCases.map(c => (
                        <div class="cmd-item">
                            <span class="cmd-label">{c.label}</span>
                            <code class="cmd-code">$ {c.cmd}</code>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .usecases-section {
        max-width: 80rem;
        margin: 0 auto;
        padding: 5rem 1.5rem;
        border-top: 2px solid var(--arch-line);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 1.875rem;
        color: var(--arch-ink);
        font-weight: 800;
        margin: 0;
        white-space: nowrap;
    }

    @media (max-width: 640px) {
        .section-title {
            white-space: normal;
            font-size: 1.5rem;
        }
    }

    .section-line {
        height: 4px;
        background-color: var(--arch-ink);
        flex-grow: 1;
    }

    .usecases-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2.5rem;
    }

    @media (min-width: 1024px) {
        .usecases-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .usecase-block {
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        padding: 2rem;
    }

    .usecase-label {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .usecase-marker {
        width: 0.75rem;
        height: 0.75rem;
        min-width: 0.75rem;
        background-color: var(--arch-brick);
    }

    .usecase-title {
        font-family: var(--font-heading);
        font-size: 1.125rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--arch-ink);
        margin: 0;
    }

    .usecase-desc {
        font-size: 0.9375rem;
        line-height: 1.6;
        color: var(--arch-ink-light);
        margin: 0 0 1.5rem 0;
    }

    .usecase-commands {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .cmd-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .cmd-label {
        font-family: var(--font-heading);
        font-size: 0.6875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--arch-brick);
    }

    .cmd-code {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--arch-ink);
        background-color: var(--arch-shape);
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--arch-line);
        line-height: 1.5;
        white-space: pre-wrap;
        word-break: break-word;
    }

    .usecase-code {
        margin-top: 2.5rem;
    }

    /* YAML styling inside CodeFigure */
    .yaml-key {
        color: var(--arch-brick);
        font-weight: 500;
    }

    .yaml-indent {
        padding-left: 1.5rem;
    }

    .yaml-indent2 {
        padding-left: 3rem;
    }
</style>

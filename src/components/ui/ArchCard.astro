---
interface Props {
    title: string;
    icon: string;
    domain: string;
    description: string;
    features: string[];
    href: string;
}

const { title, icon, domain, description, features, href } = Astro.props;
---

<a href={href} class="arch-card">
    <div class="arch-card-corner"></div>
    <div class="arch-card-header">
        <span class="arch-card-icon">{icon}</span>
        <div>
            <h3 class="arch-card-title">{title}</h3>
            <span class="arch-card-domain">{domain}</span>
        </div>
    </div>
    <p class="arch-card-desc">{description}</p>
    <div class="arch-card-tags">
        {features.slice(0, 4).map(f => (
            <span class="arch-tag">{f}</span>
        ))}
    </div>
</a>

<style>
    .arch-card {
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        background-color: var(--arch-surface);
        border: 2px solid var(--arch-ink);
        box-shadow: var(--shadow-draft);
        position: relative;
        text-decoration: none;
        color: inherit;
        overflow: hidden;
        transition: transform 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                    box-shadow 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .arch-card:hover {
        transform: translate(4px, 4px);
        box-shadow: var(--shadow-draft-hover);
    }

    .arch-card-corner {
        position: absolute;
        top: 0;
        right: 0;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 24px 24px 0;
        border-color: transparent var(--arch-brick-transparent) transparent transparent;
        transition: border-color 0.12s;
    }

    .arch-card:hover .arch-card-corner {
        border-color: transparent rgba(200, 90, 50, 0.25) transparent transparent;
    }

    .arch-card-header {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .arch-card-icon {
        font-size: 1.5rem;
        width: 2.75rem;
        height: 2.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--arch-paper);
        border: 2px solid var(--arch-ink);
        flex-shrink: 0;
    }

    .arch-card-title {
        font-family: var(--font-heading);
        font-weight: 700;
        font-size: 0.95rem;
        color: var(--arch-ink);
        text-transform: uppercase;
        letter-spacing: 0.01em;
        margin: 0;
        line-height: 1.3;
    }

    .arch-card-domain {
        font-family: var(--font-mono);
        font-size: 0.68rem;
        color: var(--arch-brick);
        font-weight: 500;
    }

    .arch-card-desc {
        font-size: 0.82rem;
        color: var(--arch-ink-light);
        line-height: 1.55;
        font-weight: 400;
        margin: 0;
        flex: 1;
    }

    .arch-card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.35rem;
        margin-top: 0.85rem;
    }

    .arch-tag {
        font-family: var(--font-mono);
        font-size: 0.62rem;
        color: var(--arch-ink-light);
        background: var(--arch-paper);
        border: 1px solid var(--arch-line);
        padding: 0.15rem 0.45rem;
    }
</style>
